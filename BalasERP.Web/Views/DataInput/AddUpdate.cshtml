@model BalasERP.Domain.DataInputModel

@{
    ViewData["Title"] = "Add Update DataInput";
}

<!-- Page header -->
<div class="page-header page-header-light shadow">
    <div class="page-header-content d-lg-flex border-top">
        <div class="d-flex">
            <div class="breadcrumb py-2">
                <a asp-action="index" asp-controller="home" class="breadcrumb-item"><i class="ph-house"></i></a>
                <a asp-action="index" asp-controller="datainput" class="breadcrumb-item">DataInputs</a>

                <span class="breadcrumb-item active">Add Update DataInput</span>
            </div>
        </div>
    </div>
</div>
<!-- /page header -->
<!-- Content area -->
<div class="content">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Add DataInput</h5>
        </div>

        <div class="card-body border-top">
            <form id="datainput" asp-controller="datainput" asp-action="addupdate" role="form" method="post">
                <div class="row">
                    <div class="col-lg-12" hidden>
                        <div class="mb-3">
                            <label class="form-label">Id:</label>
                            <input type="text" class="form-control" placeholder="Id" asp-for="Id">
                            <span asp-validation-for="Id"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-3">
                            <label class="form-label">DataInput:</label>
                            <input type="text" class="form-control" placeholder="DataInput" asp-for="DataInput">
                            <span asp-validation-for="DataInput"></span>
                        </div>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Submit <i class="ph-paper-plane-tilt ms-2"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /content area -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    $(function () {
        $("#datainput").submit(async function (e) {
            e.preventDefault();

            if ($("#datainput").valid()) {

                var obj = {
                    ['type']: $(this).attr("method"),
                    ['url']: $(this).attr("action"),
                    ['data']: $('#datainput').serialize(),
                }

                var result = await AjaxCall(obj);
                if (result.status) {
                    console.log('This was success');
                    window.location.href = '@Url.Action("index","datainput")';
                }
                else {
                    console.log('This was failure');
                }
            }
            else
                return false;
        });
    });
</script>